<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.androd.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#029688"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ghoozhism" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/tag1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imguser"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/male" />

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/imguser"
                    android:backgroundTint="#FFF"
                    android:hint="نام کاربری"
                    android:inputType="text"
                    android:id="@+id/Login_EditText_UserName"
                    android:textColor="#fff"
                    android:textColorHint="#d3d2d2"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tag2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tag1"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/login_botton_hide_password"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/hide" />

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/login_botton_hide_password"
                    android:backgroundTint="#fff"
                    android:gravity="right"
                    android:id="@+id/Login_EditText_Password"
                    android:hint="رمزعبور"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    android:textColorHint="#d3d2d2"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/hide" />
            </RelativeLayout>


            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="100dp"
                android:id="@+id/Login_Button_SignIn"
                android:background="@drawable/shap_background"
                android:text="ورود"
                android:textColor="#029688"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Login_TextView_SignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Login_TextView_Forget"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:background="@color/ui"
                android:text="عضویت"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="#029688"
                android:id="@+id/Login_TextView_Forget"
                android:text="رمز عبور خود را فراموش کرده ام"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>