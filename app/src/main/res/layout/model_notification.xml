<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="5"
    android:background="@drawable/shap_notification"
    android:layout_marginBottom="1dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.25"
        android:weightSum="3"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/modelnotification_textview_numberlike"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/bottom_white"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="like for this post"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/modelnotification_textview_numberlike"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/bottom_white"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/modelnotification_textview_numbercomment"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="33"
                android:textStyle="bold"
                android:textColor="@color/bottom_white"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comment"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/modelnotification_textview_numbercomment"
                android:textStyle="bold"
                android:textColor="@color/bottom_white"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/modelnotification_textview_numbershare"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="567"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/bottom_white"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="share this post"
                android:textStyle="bold"
                android:layout_toRightOf="@id/modelnotification_textview_numbershare"
                android:layout_centerVertical="true"
                android:textColor="@color/bottom_white"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"/>
        </RelativeLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.75">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/bottom_white"/>
    </RelativeLayout>



</LinearLayout>